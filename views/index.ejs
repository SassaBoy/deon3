<script>
document.addEventListener('DOMContentLoaded', () => {
  let currentPage = 1; // Initial page

  const loadArticles = async (page) => {
    try {
      // Fetch articles from the server
      const response = await fetch(`/articles/${page}`);
      const result = await response.json();

      // Destructure the result object
      const { articles, totalPages } = result;

      // Remove the current articles from the container
      const container = document.getElementById('article-container');
      container.innerHTML = '';
      // Append new articles to the container
      articles.forEach(article => {
        const newArticle = document.createElement('div');
        newArticle.className = 'col-lg-6';
        newArticle.innerHTML = `
          <div class="blog-item wow fadeInUp" data-wow-delay="0.1s">
            <div class="blog-img">
                <img src="${article.image}" alt="Blog Image">
            </div>
            <div class="blog-text">
              <h2>${article.title}</h2>
              <div class="blog-meta">
                <p><i class="far fa-user"></i>${article.author}</p>
                <p><i class="far fa-list-alt"></i>${article.category}</p>
                <p><i class="far fa-calendar-alt"></i>${new Date(article.date).toISOString().split('T')[0]}</p>
              </div>
              <p>${article.description}</p>
              <a class="btn" href="/article/${article._id}">Read More <i class="fa fa-angle-right"></i></a>
            </div>
          </div>`;
        container.appendChild(newArticle);
      });

      // Enable/disable "Next" and "Previous" buttons based on the current page
      const loadNextButton = document.getElementById('loadNext');
      const loadPreviousButton = document.getElementById('loadPrevious');

      loadNextButton.disabled = currentPage === totalPages; // Disable "Next" if on the last page
      loadPreviousButton.disabled = currentPage === 1; // Disable "Previous" if on the first page
    } catch (error) {
      console.error('Error loading articles:', error);
    }
  };

  const loadNextButton = document.getElementById('loadNext');
  const loadPreviousButton = document.getElementById('loadPrevious');

  loadNextButton.addEventListener('click', (event) => {
    event.preventDefault(); // Prevent the default anchor behavior
    currentPage += 1;
    loadArticles(currentPage);
  });

  loadPreviousButton.addEventListener('click', (event) => {
    event.preventDefault(); // Prevent the default anchor behavior
    currentPage -= 1;
    loadArticles(currentPage);
  });

  // Load initial articles
  loadArticles(currentPage);
});



